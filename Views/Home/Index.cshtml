@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="container d-flex justify-content-between mt-5">
    <div>
        <h3>Register</h3>
        <form asp-action="Register" asp-controller="Home" method="post">
            <div class="form-group">
                <label for="FirstName">First Name:</label>
                <input asp-for="FirstName" class="form-control">
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <div class="form-group">
                <label for="LastName">Last Name:</label>
                <input asp-for="LastName" class="form-control">
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
            <div class="form-group">
                <label for="Email">Email:</label>
                <input asp-for="Email" class="form-control">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input asp-for="Password" class="form-control">
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
            <div class="form-group">
                <label for="ConfirmPass">Confirm Password:</label>
                <input asp-for="ConfirmPass" class="form-control">
            </div>
            <span asp-validation-for="ConfirmPass" class="text-danger"></span>
            <input type="submit" value="Register" class="btn btn-primary btn-outline-dark text-white">
        </form>
    </div>
    <div>
        <h3>Login</h3>
        <partial name ="_Login"/>
    </div>
    
</div>
