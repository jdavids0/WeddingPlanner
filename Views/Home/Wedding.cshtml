@{
    ViewData["Title"] = "Wedding";
}

@model Wedding

<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <div>
            <h3>Plan Your Wedding</h3>
        </div>
        <div class="d-flex">
            <a href="/dashboard">Dashboard</a>
            <a href="/">Logout</a>
        </div>
    </div>
    <form asp-action="AddWedding" asp-controller="Home" method="post">
        <div class="form-group">
            <label for="WedderOne">Wedder One:</label>
            <input asp-for="WedderOne" class="form-control">
        </div>
        <span asp-validation-for="WedderOne" class="text-danger"></span>
        <div class="form-group">
            <label for="WedderTwo">Wedder Two:</label>
            <input asp-for="WedderTwo" class="form-control">
        </div>
        <span asp-validation-for="WedderTwo" class="text-danger"></span>
        <div class="form-group">
            <label for="Date">Date:</label>
            <input asp-for="Date" type="date" class="form-control">
        </div>
        <span asp-validation-for="Date" class="text-danger"></span>
        <div class="form-group">
            <label for="Address">Address:</label>
            <input asp-for="Address" class="form-control">
        </div>
        <span asp-validation-for="Address" class="text-danger"></span>
        <input type="submit" value="Create" class="btn btn-primary btn-outline-dark text-white">
    </form>
</div>